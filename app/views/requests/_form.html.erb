<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card flex-row my-5 border-1 shadow rounded-3 overflow-hidden">
                    <div class="card-body p-4 p-sm-5">
                        <h3 class="card-title text-center">Employee Leave Application Form</h3>
                        <p class="card-subtitle text-center mb-3 font-weight-light font-italic">(Please fill in the form below if you need to leave work. All leave applications need to be approved by both the applicant and the manager)</p>
                        <%= form_for @request do |f| %>
                            <div class="form-floating mb-3">
                                <%= f.label 'Name:' %>
                                <%= f.text_field :name, class: "form-control" %>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <%= f.label 'Start date:' %>
                                    <%= f.date_field :start_date, class: "form-control" %>
                                </div>
                                <div class="form-group col-md-6">
                                    <%= f.label 'End date:' %>
                                    <%= f.date_field :end_date, class: "form-control" %>
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                                <%= f.label :total_days %>
                                <%= f.text_field :total_days, class: "form-control" %>
                            </div>

                            <div class="form-floating mb-3">
                                <%= f.label :shift_time %>
                                <%= f.text_field :shift_time, class: "form-control" %>
                            </div>

                            <div class="form-floating mb-3">
                                <%= f.label :reason %>
                                <%= f.text_field :reason, class: "form-control" %>
                            </div>
                            <% if current_user.admin? %>
                                <div class="form-floating mb-3">
                                    <%= f.label :status %>
                                    <%= f.select :status, Request.statuses.keys, {}, { class: "form-control" } %>
                                </div>
                            <% end %>
                            <div class="form-floating mb-3">
                                <%= f.label :point %>
                                <%= f.text_field :point, class: "form-control" %>
                            </div>

                            <div class="d-flex justify-content-center">
                                <%= f.submit "SEND REQUEST", class: "btn btn-lg btn-primary btn-login fw-bold" %>
                            </div>

                            <hr class="my-3">
                        <% end %>
                        <%= link_to 'Back', requests_path, class: "d-flex justify-content-center" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
