<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card flex-row my-5 border-1 shadow rounded-3 overflow-hidden">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">Leave Request</h5>
                    <%= form_for @request do |f| %>
                        <div class="form-floating mb-3">
                            <%= f.label :name %>
                            <%= f.text_field :name, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :start_date %>
                            <%= f.datetime_field :start_date, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :end_date %>
                            <%= f.datetime_field :end_date, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :shift_time %>
                            <%= f.text_field :shift_time, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :reason %>
                            <%= f.text_field :reason, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :status %>
                            <%= f.text_field :status, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                        <%= f.label :point %>
                            <%= f.text_field :point, class: "form-control" %>
                        </div>

                        <div class="d-flex justify-content-center">
                            <%= f.submit "Send Request", class: "btn btn-lg btn-primary btn-login fw-bold " %>
                        </div>

                        <hr class="my-4">
                    <% end %>
                    <%= link_to 'Back', requests_path, class: "d-flex justify-content-center" %>
                </div>
                </div>
            </div>
        </div>
    </div>
</body>