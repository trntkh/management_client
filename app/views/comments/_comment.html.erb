<div class="col-lg-12">
    <div class="card">
        <div class="row">
            <div class="col-lg-9">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= image_tag(comment.user.avatar.thumb.url, class:"rounded-circle") if comment.user.avatar? %>
                        <div class="list-inline-item">
                            <strong class=""><%= comment.user.full_name %></strong>
                            <p class="font-italic font-weight-light"><%= comment.body %></p>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-lg-3 text-right">
                <%= link_to 'X', [comment.request, comment], method: :delete, class: "btn btn-sm btn-danger mt-1 mr-1" %>
            </div>
        </div>
    </div>
</div>