<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card flex-row my-5 border-1 shadow rounded-3 overflow-hidden">
                <div class="card-body p-4 p-sm-5">
                    <% if params[:controller] == 'users' && (params[:action]) == 'new' %>
                        <h5 class="card-title text-center mb-5 fw-light fs-5">REGISTER</h5>
                    <% else %>
                        <h5 class="card-title text-center mb-5 fw-light fs-5">EDITING USER</h5>
                    <% end %>
                    <%= form_for @user do |f| %>
                        <div class="form-floating mb-3">
                            <label class="btn btn-outline-secondary btn-change-avatar">
                                Upload avatar
                                <span style="display:none;">
                                    <%= f.file_field :avatar, id: "fileUploader" %>
                                </span>
                            </label>
                            <img id="blah" src="" style="height:200ps;width:200px;">
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :first_name %>
                            <%= f.text_field :first_name, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :last_name %>
                            <%= f.text_field :last_name, class: "form-control" %>
                        </div>
                        
                        <% if params[:controller] == 'users' && (params[:action]) == 'new' %>
                            <div class="form-floating mb-3">
                                <%= f.label :email %><br />
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                            </div>

                            <div class="form-floating mb-3">
                                <%= f.label :password %>
                                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                            </div>

                            <div class="form-floating mb-3">
                                <%= f.label :password_confirmation %><br />
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                            </div>
                        <% end %>

                        <div class="form-floating mb-3">
                            <%= f.label :nationality %>
                            <%= f.text_field :nationality, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :address %>
                            <%= f.text_field :address, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :phone %>
                            <%= f.text_field :phone, class: "form-control" %>
                        </div>

                        <% if current_user.admin? %>
                            <div class="form-floating mb-3">
                                <%= f.label :role %>
                                <%= f.text_field :role, class: "form-control" %>
                            </div>
                        <% end %>

                        <div class="form-floating mb-3">
                            <%= f.label :bio %>
                            <%= f.text_area :bio, class: "form-control" %>
                        </div>

                        <div class="form-floating mb-3">
                            <%= f.label :description %>
                            <%= f.text_area :description, class: "form-control" %>
                        </div>

                        <% if !current_user.employee? %>
                            <div class="form-floating mb-3">
                                <%= f.label :status %>
                                <%= f.select :status,  User.statuses.keys, {}, { class: "form-control text-capitalize" } %>
                            </div>
                        <% end %>

                        <div class="d-flex justify-content-center">
                            <%= f.submit "Save", class: "btn btn-lg btn-primary btn-login fw-bold text-uppercase" %>
                        </div>

                        <hr class="my-4">
                    <% end %>
                    <%= link_to 'Back', users_path, class: "d-flex justify-content-center" %>
                </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#fileUploader").change(function(){
        readURL(this);
    });
</script>