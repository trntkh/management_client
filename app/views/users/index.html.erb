<body>
    <div class="container mt-3 mb-4">
    <div class="col-lg-9 mt-4 mt-lg-0">
        <div class="row">
            <div class="col-md-12">
                <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
                <div class="d-flex bd-highlight">
                    <h3 class="mr-auto bd-highlight">User Management</h3>
                    <% if current_user.admin? %>
                        <%= link_to "New User", new_user_path, class: "btn btn-outline-primary mr-1" %>
                    <% end %>

                    <% if current_user.admin? %>
                        <%= link_to "See All Requests", requests_path, class: "btn btn-outline-primary" %>
                    <% end %>

                    <% if !current_user.admin? %>
                        <%= link_to "New Leave Request", new_request_path, class: "btn btn-outline-primary mr-1" %>
                    <% end %>

                    <% if !current_user.admin? %>
                        <%= link_to "See The Requests", requests_path, class: "btn btn-outline-primary" %>
                    <% end %>
                </div>

                <table class="table manage-candidates-top mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th class="action text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                            <tr class="candidates-list">
                                <td class="title">
                                    <div class="thumb">
                                        <%= image_tag(user.avatar.thumb.url) if user.avatar? %>
                                    </div>
                                    <div class="candidate-list-details">
                                        <div class="candidate-list-info">
                                            <div class="candidate-list-title">
                                                <h5 class="mb-0"><%= link_to user.full_name, user_path(user) %></h5>
                                            </div>
                                            <div class="candidate-list-option">
                                                <ul class="list-unstyled">
                                                    <li><i class="fas fa-filter pr-1"></i><%= user.role %></li>
                                                    <li><i class="fas fa-map-marker-alt pr-1"></i><%= user.address %></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <ul class="list-unstyled mb-0 d-flex justify-content-end">
                                        <li><%= link_to user_path(user), :class=> "text-primary" do %><i class="fa-solid fa-eye" aria-hidden="true" target="_blank"></i><% end %></li>
                                        <% if current_user.admin? || user.id == current_user.id %>
                                            <li><%= link_to edit_user_path(user), :class=> "text-primary" do %><i class="fas fa-pencil-alt" aria-hidden="true" target="_blank"></i><% end %></li>
                                        <% end %>
                                        <% if current_user.admin? %>
                                            <li><%= link_to user_path(user), :class=> "text-primary", method: :delete, data: { confirm: 'Are you sure?' } do %><i class="far fa-trash-alt" aria-hidden="true" target="_blank"></i><% end %></li>
                                        <% end %>
                                    </ul>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
    </div>
</body>
