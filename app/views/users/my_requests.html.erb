<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-center">All My Requests</h3>
        </div>
        <% @requests.each do |request| %>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body py-3">
                        <div class="row">               
                            <div class="col-lg-3 text-center">
                                <%= image_tag(request.user.avatar.thumb.url) if request.user.avatar? %>
                            </div>
                            <div class="col-lg-6">
                                <h4><%= request.name %></h4>
                                <p><%= request.user.role %></p>
                                <div class="button-list mt-4 mb-3"> 
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-borderless mb-0">
                                        <tbody>
                                            <tr>
                                                <th scope="row" class="p-1">Start date:</th>
                                                <td class="p-1"><%= request.start_date.strftime("%d/%m/%Y") %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row" class="p-1">End date:</th>
                                                <td class="p-1"><%= request.end_date.strftime("%d/%m/%Y") %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row" class="p-1">Reason:</th>
                                                <td class="p-1"><%= request.reason %></td>
                                            </tr>
                                            <tr>
                                                <th scope="row" class="p-1">Status:</th>
                                                <td class="p-1 text-capitalize"><%= request.status %></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>